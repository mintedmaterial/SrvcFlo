{
  "mcpServers": {
    "paintswap-mcp": {
      "command": "python",
      "args": ["-m", "server"],
      "cwd": "mcp-servers/paintswap-mcp",
      "env": {
        "SONIC_RPC_URL": "${SONIC_RPC_URL:-https://rpc.sonic.network}",
        "WEB3_PROVIDER_URL": "${WEB3_PROVIDER_URL:-https://rpc.sonic.network}",
        "THIRDWEB_CLIENT_ID": "${THIRDWEB_CLIENT_ID:-}"
      },
      "description": "Paintswap NFT marketplace integration for Sonic ecosystem using RPC"
    },
    "discord-monitoring-mcp": {
      "command": "python", 
      "args": ["-m", "server"],
      "cwd": "mcp-servers/discord-monitoring-mcp",
      "env": {
        "DISCORD_SONIC_WEBHOOK": "${DISCORD_SONIC_WEBHOOK:-}",
        "DISCORD_SOCIAL_WEBHOOK": "${DISCORD_SOCIAL_WEBHOOK:-}",
        "DISCORD_NFT_WEBHOOK": "${DISCORD_NFT_WEBHOOK:-}",
        "DISCORD_DEFI_WEBHOOK": "${DISCORD_DEFI_WEBHOOK:-}"
      },
      "description": "Discord webhooks and social monitoring for ServiceFlow AI"
    },
    "coincodex-mcp": {
      "command": "python",
      "args": ["-m", "server"], 
      "cwd": "mcp-servers/coincodex-mcp",
      "env": {
        "COINCODEX_API_KEY": "${COINCODEX_API_KEY:-}"
      },
      "description": "CoinCodex cryptocurrency data pipeline and monitoring"
    },
    "cloudflare-storage-mcp": {
      "command": "python",
      "args": ["-m", "server"],
      "cwd": "mcp-servers/cloudflare-storage-mcp", 
      "env": {
        "CLOUDFLARE_API_TOKEN": "${CLOUDFLARE_API_TOKEN:-}",
        "CLOUDFLARE_ACCOUNT_ID": "${CLOUDFLARE_ACCOUNT_ID:-}"
      },
      "description": "Integration with ServiceFlow AI Cloudflare storage and KV"
    },
    "supabase-mcp": {
      "command": "python",
      "args": ["server/mcp_server.py"],
      "cwd": "mcp-servers/supabase-mcp",
      "env": {
        "SUPABASE_URL": "${SUPABASE_URL:-}",
        "SUPABASE_SERVICE_KEY": "${SUPABASE_SERVICE_KEY:-}",
        "OPENAI_API_KEY": "${OPENAI_API_KEY:-}"
      },
      "description": "Enhanced Supabase MCP server for database operations with natural language processing and schema discovery"
    }
  }
}